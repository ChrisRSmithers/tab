{
  "passPerPreset": true,
  "presets": [
    {
      "plugins": [
        "./babel/babelRelayPlugin"
      ]
    },
    "react",
    ["es2015", { "modules": false }],
    "stage-0"
  ],
  "plugins": [
    ["module-resolver", {
      "root": ["./utils"],
      "alias": {
        "relay-test-utils": "relay-test-utils"
      }
    }]
  ],
  "env": {
    "development": {
      "plugins": [
        ["react-transform", {
          "transforms": [{
            "transform": "react-transform-hmr",
            "imports": ["react"],
            "locals": ["module"]
          }, {
            "transform": "react-transform-catch-errors",
            "imports": ["react", "redbox-react"]
          }]
        }]
      ]
    },
    "test": {
      "presets": [
        "react",
        "es2015",
        "stage-0"
      ]
    }
  }
}
