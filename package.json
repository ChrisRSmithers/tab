{
  "name": "tab",
  "version": "0.1.0",
  "description": "Tab for a Cause.",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "nodemon": "^1.11.0"
  },
  "scripts": {
    "build": "npm run all:install & docker-compose build",
    "start": "docker-compose up & npm run web:graphqlschema:monitor & npm run web:start & npm run graphql:start & npm run lambda:start",
    "stop": "docker-compose stop",
    "test": "npm run web:test & npm run graphql:test",
    "all:install": "yarn install & npm run web:install & npm run graphql:install & npm run dynamodb:install & npm run lambda:install",
    "dynamodb:install": "cd ./dynamodb && yarn install",
    "graphql:install": "cd ./graphql && yarn install",
    "graphql:start": "cd ./graphql && npm run start",
    "graphql:test": "cd ./graphql && npm test",
    "lambda:install": "cd ./lambda && yarn install",
    "lambda:start": "cd ./lambda && npm run start",
    "web:graphqlschema:monitor": "nodemon --watch graphql/data/schema.json --exec \"npm run web:graphqlschema:update\"",
    "web:graphqlschema:update": "cp graphql/data/schema.json web/data/schema.json",
    "web:install": "cd ./web && yarn install",
    "web:test": "cd ./web && npm test",
    "web:start": "cd ./web && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gladly-team/tab.git"
  },
  "author": "Gladly Team",
  "bugs": {
    "url": "https://github.com/gladly-team/tab/issues"
  },
  "homepage": "https://github.com/gladly-team/tab#readme"
}
