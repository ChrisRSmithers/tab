{
  "name": "tab-graphql",
  "version": "0.1.0",
  "description": "GraphQL server for Tab for a Cause.",
  "private": true,
  "dependencies": {
    "asyncawait": "^1.0.6",
    "cors": "^2.8.1",
    "graphql": "^0.9.1",
    "graphql-relay": "^0.5.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "uuid": "3.0.1"
  },
  "devDependencies": {
    "aws-sdk": "^2.52.0",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-relay-plugin": "^0.11.0",
    "body-parser": "^1.17.1",
    "chokidar": "^1.6.1",
    "codecov": "^2.1.0",
    "cross-env": "^5.0.0",
    "dotenv-extended": "^2.0.0",
    "express": "^4.14.1",
    "express-graphql": "^0.6.3",
    "if-env": "^1.0.0",
    "jest": "^20.0.1",
    "npm-run-all": "^4.0.2",
    "require-clean": "^0.1.3",
    "serverless": "^1.14.0",
    "serverless-plugin-include-dependencies": "^2.0.3",
    "webpack": "^2.2.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](config)[/\\\\]"
    ],
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "babel-node ./server.js",
    "build": "rm -rf ./build && npm run build:compile",
    "build:compile": "npm run build:config && cross-env NODE_ENV=production babel --out-dir='build' --ignore='build,coverage,__mocks__,__tests__,node_modules,config.js,server.js' ./",
    "build:config": "NODE_ENV=production node -r dotenv-extended/config ./scripts/generateConfig.js",
    "deploy": "npm run build && serverless deploy",
    "update-schema": "babel-node ./scripts/updateSchema.js",
    "test": "npm-run-all -s test:run test:codecov",
    "test:run": "jest --coverage",
    "test:codecov": "if-env NODE_ENV=test && codecov || echo 'Skipping test coverage logging.'",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gladly-team/tab.git"
  },
  "author": "Gladly Team",
  "bugs": {
    "url": "https://github.com/gladly-team/tab/issues"
  },
  "homepage": "https://github.com/gladly-team/tab#readme"
}
